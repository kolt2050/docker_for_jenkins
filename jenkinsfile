node {
    checkout scm

    docker.withRegistry('https://hub.docker.com') {

        docker.image('kolt2050/jenkins_docker').inside {
           sh 'docker --version' 
           sh 'echo 1234'
        }
    }
    stage('Clone repo') {
        println("HELLO")
        
           sh 'git clone https://github.com/epam/edp-install.git'
           sh 'ls -la'
           sh 'cd edp-install'
           sh 'ls -la'
           sh 'echo "---------------build docs--------------"'
           sh 'docker run --rm -i -v ${PWD}:/docs --entrypoint mkdocs edp-docs build | make'
           sh 'echo "---------------site is here--------------"'
           //ls -la ../
           //mv site ../
           //git checkout gh-pages
           //ls -la
           //rm -rf *
           //echo "Clear gh-pages"
           //cp ../site .
           //ls -la
       
        
    }
}
